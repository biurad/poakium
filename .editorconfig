# Coding styles between different editors and IDEs: editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = LF
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.{php,phpt,html,twig,poakium}]
indent_style = space
indent_size = 4

[*.md]
max_line_length = 80
