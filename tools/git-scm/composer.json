{
  "name": "biurad/git-scm",
  "type": "library",
  "description": "Library for working with Git repository & Git services in PHP.",
  "keywords": ["git", "scm", "repository", "library", "php"],
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Niiquaye Divine Ibok",
      "email": "divineibok@gmail.com"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "preferred-install": "dist",
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "require": {
    "php": "^8.0",
    "psr/log": "^1.0 | ^3.0",
    "symfony/process": "^6.0"
  },
  "autoload": {
    "psr-4": {
      "Biurad\\GIT\\": "src/"
    }
  },
  "suggest": {
    "ext-fileinfo": "Required to determine the mimetype of a blob",
    "psr/log": "Required to use loggers for reporting of execution"
  }
}
